<div class="jumbotron dashboard-padding">
    <div class="container">
        <h1 class="display-6 text-center bop-logo">Dashboard</h1>
    </div>
</div>

<section>
    {{> fusioncharts }}
</section>

<div class="container">

    <section class="row">

        <table class="table bg-light table-sm col-sm-6 table-bordered text-centered border">
            <caption class="text-dark bg-light text-center font-weight-bold">Current Assets</caption>
            <thead>
                <tr>
                    <th scope="col">Current Capital</th>
                    <th scope="col">Total BTC</th>
                    <th scope="col">Total LTC</th>
                    <th scope="col">Total ETH</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">$10,000.00</th>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                </tr>
            </tbody>
        </table>

        <div class="col-sm-2 pt-2">
            <div class="row justify-content-center">
                {{!-- buy btc --}}
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#buyBTC">
                    Buy BTC
                </button>
            </div>

            <div class="row">
                <br>
            </div>

            <div class="row justify-content-center">
                {{!-- sell btc --}}
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#sellBTC">
                    Sell BTC
                </button>
            </div>

        </div>

        <div class="col-sm-2 pt-2">
            <div class="row justify-content-center">
                {{!-- buy LTC --}}
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#buyLTC">
                    Buy LTC
                </button>
            </div>

            <div class="row">
                <br>
            </div>

            <div class="row justify-content-center">
                {{!-- sell LTC --}}
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#sellLTC">
                    Sell LTC
                </button>
            </div>

        </div>

        <div class="col-sm-2 pt-2">
            <div class="row justify-content-center">
                {{!-- buy ETH --}}
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#buyETH">
                    Buy ETH
                </button>
            </div>

            <div class="row">
                <br>
            </div>

            <div class="row justify-content-center">
                {{!-- sell ETH --}}
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#sellETH">
                    Sell ETH
                </button>
            </div>

        </div>

    </section>

</div>

<section class="row">
    {{!-- transaction history --}}
    <div class="col-sm-12">
        <table class="table bg-light table-bordered">
            <caption class="text-dark bg-light text-center font-weight-bold">Transaction History</caption>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Time Stamp</th>
                    <th scope="col">Stock Held</th>
                    <th scope="col">Account Value</th>
                    <th scope="col">Buying Power</th>
                </tr>
            </thead>
            <tbody>
                <tr id="transaction-history">
                    <th scope="row">1</th>
                    <td>time example</td>
                    <td>stock example</td>
                    <td>acct val example</td>
                    <td>buy pwr example</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

<section>
    {{> transactionModal}}
</section>
